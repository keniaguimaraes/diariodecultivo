

<h1 class="h3 mb-2 text-gray-800">Tipo de Medicação</h1>

<div>  
  <%= link_to new_tipo_path, {remote: true, class: "btn btn-info", id: "anadir-categoria-btn"}  do %>
    <span class="fas fa-plus-square" ></span>
  <% end %>
</div>
<br />

<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
       <table id="tablaCategorias" class="table table-bordered" width="100%">
         <thead>
           <tr>
             <th>Tipo de Medicação</th>
             <th></th>
           </tr>
         </thead>
         <tbody>
         <% @tipos.each do |ef| %>
            <tr id="tipo_<%= ef.id %>" >
                <td><%= ef.descricao %></td>
                <td>
                <%= link_to "Editar", edit_tipo_path(ef), html_options = {class: "btn btn-info btn-xs", remote: true} %>
                <%= link_to 'Deletar', ef, remote: true, method: :delete, data: { confirm: "Deletar Tipo de Medicação: #{ef.descricao}?"}, class: "btn btn-danger btn-xs" %>
                </td>
            </tr>
         <% end %>
         </tbody>
       </table>
    </div>
  </div>
</div>

<%= render 'modal_tipos' %>
