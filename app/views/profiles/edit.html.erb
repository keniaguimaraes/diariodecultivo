<%= form_with model: @profile do |f| %>
   <div class="input-group">
     <%= image_tag(@profile.foto.url, size: "300x300") if @profile.foto? %>
     <br />
     <%= f.file_field :foto %>        
     <%if @profile.errors[:foto].any? %>
        <p class="bg-danger"><%= @profile.errors[:foto].to_s[/\w([^"]*)/] %></p>
     <% end %>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :nombre,  "Nome: "%>
      <%= f.text_field :nombre, class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
    <%= f.label :apellido,  "Sobrenome: "%>
    <%= f.text_field :apellido, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
  <%= f.label :direccion, "EndereÃ§o:" %>
  <%= f.text_field :direccion, class: "form-control" %>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
    <%= f.label :ciudad,  "Cidade: "%>
    <%= f.text_field :ciudad, class: "form-control" %>
    </div>
    <div class="form-group col-md-4">
        <%= f.label :estado,  "Estado:" %>
        <%= f.text_field :estado, class: "form-control" %>
    </div>
    <div class="form-group col-md-2">
        <%= f.label :zip,  "CEP"  %>
        <%= f.text_field :zip, class: "form-control" %>
    </div>
    <div class="form-group col-md-2">
        <%= f.submit "Atualizar", class: "btn btn-warning form-control" %>
    </div>
  </div>
<% end %>